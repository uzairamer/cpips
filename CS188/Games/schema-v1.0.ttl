@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix nceac: <http://www.nceac.org/ontology/> .


# A course of study or subject
nceac:Course    rdf:type    owl:Class .

# Course has many topics covering course contents
#FIXME Should be modeled as an ordered list
nceac:topic     rdf:type    owl:ObjectProperty ;
                rdfs:domain nceac:Course ;
                rdfs:range  nceac:Topic .

# A topic in a course
nceac:Topic     rdf:type    owl:Class .

# Each topic has one or more learning outcomes
nceac:outcome   rdf:type    owl:ObjectProperty ;
                rdfs:domain nceac:Topic ;
                rdfs:range  nceac:LearningOutcome .

# Quantifiable learing outcome of a topic
nceac:LearningOutcome   rdf:type    owl:Class .

# A question template for students
nceac:Question   rdf:type    owl:Class .

# Rendering URI or web view of the question
nceac:rendering    rdf:type    owl:FunctionalProperty,
                            owl:DatatypeProperty ;
                rdfs:domain nceac:Question ;
                rdfs:range  xsd:uri .


# Answering a question requires prior achievement of one or more learning outcomes
nceac:prereq   rdf:type    owl:ObjectProperty ;
                rdfs:domain nceac:Question ;
                rdfs:range  nceac:LearningOutcome .

# Questions targets to attain learning outcomes
nceac:atains   rdf:type    owl:ObjectProperty ;
                rdfs:domain nceac:Question ;
                rdfs:range  nceac:Attainment .

# The attainment of a question
nceac:Attainment   rdf:type    owl:Class .

# Each attainment targets a learning outcome
nceac:mapsto   rdf:type    owl:ObjectProperty ;
                rdfs:domain nceac:Attainment ;
                rdfs:range  nceac:LearningOutcome .

# The level of attainment of learning outcome by a question
nceac:level    rdf:type    owl:FunctionalProperty,
                            owl:DatatypeProperty ;
                rdfs:domain nceac:Attainment ;
                rdfs:range  xsd:string .
